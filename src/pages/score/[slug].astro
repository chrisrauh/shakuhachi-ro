---
import Layout from '../../layouts/Layout.astro';
import { getScoreBySlug, getScore } from '../../api/scores';
import { GitFork, Calendar, SquarePen } from '@lucide/astro';

// Enable server-side rendering for this dynamic route
export const prerender = false;

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/');
}

// Server-side fetch
const scoreResult = await getScoreBySlug(slug);
const { score } = scoreResult;

if (!score) {
  return Astro.redirect('/');
}

// Fetch parent score if forked
let parentScore = null;
if (score.forked_from) {
  const parentResult = await getScore(score.forked_from);
  parentScore = parentResult.score;
}

const formattedDate = new Date(score.created_at).toLocaleDateString('en-US', {
  month: 'short',
  day: 'numeric',
  year: 'numeric'
});
---

<Layout title={`${score.title} - Shakuhachi Score Library`} currentPage="score">
  <!-- Server-rendered metadata (compact layout) -->
  <div class="score-detail-container">
    <div class="score-detail-header">
      <div class="score-title-section">
        <div class="score-title-row">
          <h1>{score.title}</h1>
          <div class="score-metadata-inline">
            {score.composer && (
              <>
                <span class="metadata-separator">·</span>
                <span>By {score.composer}</span>
              </>
            )}
            <span class="metadata-separator">·</span>
            <span class="score-stat">
              <GitFork size={14} />
              {score.fork_count}
            </span>
            <span class="metadata-separator">·</span>
            <span class="score-stat">
              <Calendar size={14} />
              {formattedDate}
            </span>
          </div>
        </div>

        {parentScore && (
          <div class="fork-attribution">
            <GitFork size={14} />
            Forked from <a href={`/score/${parentScore.slug}`}>{parentScore.title}</a>
          </div>
        )}
      </div>

      <div class="score-actions">
        <!-- Owner-only edit button (client-side conditional) -->
        <a href={`/editor.html?id=${score.id}`}
           class="score-action-btn"
           id="edit-btn"
           aria-label="Edit score"
           style="display: none;">
          <SquarePen size={16} />
        </a>

        <button id="fork-btn"
                class="score-action-btn"
                aria-label="Fork score">
          <GitFork size={16} />
        </button>
      </div>
    </div>

    <!-- Score renderer container -->
    <div id="score-renderer-container"></div>
  </div>

  <!-- Embed score data for client -->
  <script id="score-data" type="application/json" is:inline set:html={JSON.stringify({ score, parentScore })}></script>

  <!-- Initialize theme switcher and auth widget -->
  <script>
    import { ThemeSwitcher } from '../../components/ThemeSwitcher';
    import { AuthWidget } from '../../components/AuthComponents';
    import { authState } from '../../api/authState';

    // Initialize theme switcher
    new ThemeSwitcher('theme-switcher');

    // Initialize auth widget
    const authWidget = new AuthWidget('auth-widget');

    // Subscribe to auth state changes
    authState.subscribe((user) => {
      if (user) {
        authWidget.setUser(user);
      } else {
        authWidget.setUser(null);
      }
    });
  </script>

  <!-- Client-side logic -->
  <script>
    import { ScoreDetailClient } from '../../components/ScoreDetailClient';
    const client = new ScoreDetailClient();
    client.init();
  </script>

  <style>
    /* Compact layout styling */
    .score-detail-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 var(--spacing-large);
    }

    .score-detail-header {
      display: flex;
      align-items: flex-start;
      justify-content: space-between;
      gap: var(--spacing-large);
      margin-bottom: var(--spacing-x-large);
      /* NO panel styling - no background, border, shadow */
    }

    .score-title-section {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-small);
    }

    .score-title-row {
      display: flex;
      align-items: baseline;
      gap: var(--spacing-small);
      flex-wrap: wrap;
    }

    .score-title-row h1 {
      font-size: var(--font-size-x-large); /* 24px */
      font-weight: var(--font-weight-semibold); /* 500 */
      color: var(--color-neutral-900);
      margin: 0;
    }

    .score-metadata-inline {
      display: flex;
      align-items: center;
      gap: var(--spacing-small);
      font-size: var(--font-size-small);
      color: var(--color-neutral-600);
      flex-wrap: wrap;
    }

    .metadata-separator {
      color: var(--color-neutral-400);
    }

    .score-stat {
      display: inline-flex;
      align-items: center;
      gap: var(--spacing-3x-small);
    }

    .fork-attribution {
      display: flex;
      align-items: center;
      gap: var(--spacing-2x-small);
      font-size: var(--font-size-small);
      color: var(--color-neutral-600);
      /* Simplified - no background box */
    }

    .fork-attribution a {
      color: var(--color-primary-600);
      text-decoration: none;
    }

    .fork-attribution a:hover {
      text-decoration: underline;
    }

    .score-actions {
      display: flex;
      gap: var(--spacing-small);
    }

    .score-action-btn {
      padding: var(--spacing-x-small);
      cursor: pointer;
      background: transparent;
      border: var(--input-border-width) solid var(--color-neutral-300);
      border-radius: var(--border-radius-medium);
      color: var(--color-neutral-700);
      transition: all var(--transition-fast);
      display: flex;
      align-items: center;
      justify-content: center;
      line-height: 0;
      text-decoration: none;
    }

    .score-action-btn:hover {
      background: var(--color-neutral-200);
      border-color: var(--color-neutral-400);
    }

    #score-renderer-container {
      margin-top: var(--spacing-large);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .score-detail-header {
        flex-direction: column;
        align-items: stretch;
      }

      .score-title-row h1 {
        font-size: var(--font-size-large);
      }

      .score-actions {
        justify-content: flex-start;
        margin-top: var(--spacing-medium);
      }
    }
  </style>
</Layout>
