---
interface Props {
  title: string;
  currentPage: 'browse' | 'create' | 'score';
  fullHeight?: boolean;
  noPadding?: boolean;
}

const { title, currentPage, fullHeight = false, noPadding = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸªˆ</text></svg>"
    />
  </head>
  <body class={fullHeight ? 'full-height' : ''}>
    <header>
      <div class="header-left">
        <a href="/" class="logo">
          <div class="logo-icon">ãƒ­</div>
        </a>
        <nav>
          <a href="/" class={currentPage === 'browse' ? 'active' : ''}>Scores</a>
          <a href="/editor" class={currentPage === 'create' ? 'active' : ''}>Create</a>
        </nav>
      </div>
      <div class="header-right">
        <div id="theme-switcher"></div>
        <div id="auth-widget"></div>
      </div>
    </header>

    <main class={noPadding ? 'no-padding' : ''}>
      <slot />
    </main>

    <style>
      @import '../styles/tokens/light.css';
      @import '../styles/tokens/dark.css';

      /* ONLY OVERRIDE: Font family to use Noto Sans JP */
      :root {
        --font-sans: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: var(--font-sans);
        background: var(--page-background-color);
        color: var(--color-neutral-700);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
      }

      body.full-height {
        height: 100vh;
        display: flex;
        flex-direction: column;
      }

      body.full-height main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        padding: 0;
      }

      header {
        padding: var(--spacing-small) var(--spacing-medium);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: var(--spacing-x-large);
      }

      .header-right {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      .logo {
        text-decoration: none;
      }

      /* Logo */
      .logo-icon {
        width: 32px;
        height: 32px;
        color: var(--color-neutral-700);
        border-radius: var(--border-radius-large);
        font-size: 24px;
        text-align: center;
        line-height: 24px;
        font-weight: 450;
        border: 2px solid var(--color-neutral-700);
        box-sizing: border-box;
      }

      /* Logo in dark mode - lighter than text */
      .theme-dark .logo-icon {
        color: var(--color-neutral-600);
        border-color: var(--color-neutral-600);
      }

      nav {
        display: flex;
        gap: var(--spacing-large);
      }

      nav a {
        color: var(--color-neutral-600);
        text-decoration: none;
        font-size: var(--font-size-small);
        padding: var(--spacing-x-small) 0;
        border-bottom: 2px solid transparent;
        transition: all var(--transition-fast);
      }

      nav a:hover,
      nav a.active {
        color: var(--color-primary-600);
        border-bottom-color: var(--color-primary-600);
      }

      #theme-switcher {
        flex-shrink: 0;
      }

      #auth-widget {
        flex-shrink: 0;
      }

      main {
        padding: var(--spacing-large) 0;
      }

      main.no-padding {
        padding: 0;
      }

      @media (max-width: 768px) {
        header {
          flex-direction: column;
          gap: var(--spacing-medium);
          align-items: stretch;
        }

        .header-left {
          flex-direction: column;
          gap: var(--spacing-medium);
        }

        .header-right {
          justify-content: center;
        }

        nav {
          justify-content: center;
        }
      }
    </style>
  </body>
</html>
