---
import { Book, Plus, Info } from '@lucide/astro';

interface Props {
  title: string;
  currentPage: 'browse' | 'create' | 'score';
  fullHeight?: boolean;
  noPadding?: boolean;
}

const { title, currentPage: _currentPage, fullHeight = false, noPadding = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸªˆ</text></svg>"
    />
  </head>
  <body class={fullHeight ? 'full-height' : ''}>
    <header>
      <div class="header-left">
        <a href="/" class="logo">
          <div class="logo-icon">ãƒ­</div>
        </a>
        <slot name="header-metadata" />
      </div>
      <div class="header-right">
        <slot name="header-actions" />
        <!-- Desktop navigation (hidden on mobile) -->
        <div class="header-desktop-nav">
          <a
            href="/"
            class="btn btn-icon"
            aria-label="View scores"
          >
            <Book size={16} stroke-width={2} />
          </a>
          <a
            href="/score/new/edit"
            class="btn btn-icon"
            aria-label="Create new score"
          >
            <Plus size={16} stroke-width={2} />
          </a>
          <a
            href="/about"
            class="btn btn-icon"
            aria-label="About"
          >
            <Info size={16} stroke-width={2} />
          </a>
          <div id="theme-switcher"></div>
          <div id="auth-widget"></div>
        </div>
        <!-- Mobile menu (shown on mobile) -->
        <div id="mobile-menu" class="mobile-menu-container"></div>
      </div>
    </header>

    <main class={noPadding ? 'no-padding' : ''}>
      <slot />
    </main>

    <style is:global>
      @import '../styles/tokens/themes.css';
      @import '../styles/components.css';
    </style>

    <style>
      /* ONLY OVERRIDE: Font family to use Noto Sans JP */
      :root {
        --font-sans: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: var(--font-sans);
        background: var(--page-background-color);
        color: var(--color-text-primary);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
      }

      body.full-height {
        height: 100vh;
        display: flex;
        flex-direction: column;
      }

      body.full-height main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        padding: 0;
      }

      header {
        padding: var(--spacing-small) var(--spacing-medium);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 100;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      .header-right {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      /* Desktop navigation - hide on mobile */
      .header-desktop-nav {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      /* Mobile menu - hide on desktop */
      .mobile-menu-container {
        display: none;
      }

      /* Logo */
      .logo {
        text-decoration: none;
      }
      .logo-icon {
        width: 32px;
        height: 32px;
        color: var(--color-logo);
        border-radius: var(--border-radius-large);
        font-size: 24px;
        text-align: center;
        line-height: 24px;
        font-weight: 450;
        border: 2px solid var(--color-logo);
        box-sizing: border-box;
      }

      #theme-switcher {
        flex-shrink: 0;
      }

      #auth-widget {
        flex-shrink: 0;
      }

      main {
        padding: var(--spacing-large) 0;
      }

      main.no-padding {
        padding: 0;
      }

      @media (max-width: 768px) {
        header {
          gap: var(--spacing-small);
        }

        .header-left {
          align-items: flex-start;
          gap: var(--spacing-small);
          flex: 1;
        }

        .header-right {
          justify-content: flex-end;
          flex-shrink: 0;
          gap: var(--spacing-small);
        }

        /* Hide desktop navigation on mobile */
        .header-desktop-nav {
          display: none;
        }

        /* Show mobile menu on mobile */
        .mobile-menu-container {
          display: block;
        }
      }
    </style>
  </body>
</html>
