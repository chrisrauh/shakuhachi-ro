---
import { Book, Plus, Info } from '@lucide/astro';

interface Props {
  title: string;
  currentPage: 'browse' | 'create' | 'score';
  fullHeight?: boolean;
  noPadding?: boolean;
}

const { title, currentPage: _currentPage, fullHeight = false, noPadding = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)" />
    <link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
    <script is:inline>
      // Prevent flash of wrong theme - runs before body renders
      (function() {
        var prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.setAttribute('data-theme', prefersDark ? 'dark' : 'light');
      })();
    </script>
  </head>
  <body class={fullHeight ? 'full-height' : ''}>
    <header>
      <div class="header-left">
        <a href="/" class="logo">
          <div class="logo-icon">ãƒ­</div>
        </a>
        <slot name="header-metadata" />
      </div>
      <div class="header-right">
        <slot name="header-actions" />
        <!-- Desktop navigation (hidden on mobile) -->
        <div class="header-desktop-nav">
          <a
            href="/"
            class="btn btn-icon"
            aria-label="View scores"
          >
            <Book size={16} stroke-width={2} />
          </a>
          <a
            href="/score/new/edit"
            class="btn btn-icon"
            aria-label="Create new score"
          >
            <Plus size={16} stroke-width={2} />
          </a>
          <a
            href="/about"
            class="btn btn-icon"
            aria-label="About"
          >
            <Info size={16} stroke-width={2} />
          </a>
          <div id="theme-switcher"></div>
          <div id="auth-widget"></div>
        </div>
        <!-- Mobile menu (shown on mobile) -->
        <div id="mobile-menu" class="mobile-menu-container"></div>
      </div>
    </header>

    <main class={noPadding ? 'no-padding' : ''}>
      <slot />
    </main>

    <!-- Dev Tools (only rendered in dev mode) -->
    {import.meta.env.DEV && (
      <div id="letter-spacing-control" class="dev-panel"></div>
    )}

    <style is:global>
      @import '../styles/tokens/themes.css';
      @import '../styles/components.css';
    </style>

    <style>
      /* ONLY OVERRIDE: Font family to use Noto Sans JP */
      :root {
        --font-sans: 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: var(--font-sans);
        background: var(--page-background-color);
        color: var(--color-text-primary);
        min-height: 100vh;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
        letter-spacing: var(--letter-spacing-override, normal);
      }

      body.full-height {
        height: 100vh;
        display: flex;
        flex-direction: column;
      }

      body.full-height main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        padding: 0;
      }

      /* On mobile, revert to natural document scrolling */
      @media (max-width: 768px) {
        body.full-height {
          height: auto;
          min-height: 100vh;
        }

        body.full-height main {
          flex: none;
          overflow: visible;
        }
      }

      header {
        padding: var(--spacing-medium) var(--spacing-medium);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
      }

      .header-left {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      .header-right {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      /* Desktop navigation - hide on mobile */
      .header-desktop-nav {
        display: flex;
        align-items: center;
        gap: var(--spacing-medium);
      }

      /* Mobile menu - hide on desktop */
      .mobile-menu-container {
        display: none;
      }

      /* Logo */
      .logo {
        text-decoration: none;
      }
      .logo-icon {
        width: 32px;
        height: 32px;
        color: var(--color-logo);
        border-radius: var(--border-radius-2x-small);
        font-size: 24px;
        text-align: center;
        line-height: 24px;
        font-weight: 450;
        border: 2px solid var(--color-logo);
        box-sizing: border-box;
      }

      #theme-switcher {
        flex-shrink: 0;
      }

      #auth-widget {
        flex-shrink: 0;
      }

      main {
        padding: var(--spacing-large) 0;
      }

      main.no-padding {
        padding: 0;
      }

      @media (max-width: 768px) {
        header {
          gap: var(--spacing-small);
        }

        .header-left {
          align-items: flex-start;
          gap: var(--spacing-small);
          flex: 1;
        }

        .header-right {
          justify-content: flex-end;
          flex-shrink: 0;
          gap: var(--spacing-small);
        }

        /* Hide desktop navigation on mobile */
        .header-desktop-nav {
          display: none;
        }

        /* Show mobile menu on mobile */
        .mobile-menu-container {
          display: block;
        }
      }

      /* Loading state for Plus button */
      .btn.loading {
        opacity: 0.6;
        pointer-events: none;
      }

      /* Dev panel - floating bottom-right */
      .dev-panel {
        position: fixed;
        bottom: var(--spacing-medium);
        right: var(--spacing-medium);
        z-index: 100;
        max-width: 280px;
      }

      /* Tweakpane theme integration */
      .dev-panel :global(.tp-dfwv) {
        min-width: 240px;
      }

      .dev-panel :global(.tp-rotv_c) {
        background-color: var(--color-bg-subtle);
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-medium);
      }

      .dev-panel :global(.tp-lblv_l) {
        color: var(--color-text-primary);
      }

      .dev-panel :global(.tp-brkv) {
        background-color: var(--color-bg-active);
      }
    </style>

    <script>
      import { createEmptyScore } from '../utils/create-score-handler';

      document.addEventListener('DOMContentLoaded', () => {
        const createBtn = document.querySelector('a[aria-label="Create new score"]');

        createBtn?.addEventListener('click', async (e) => {
          e.preventDefault();

          // Show loading state
          createBtn.classList.add('loading');
          createBtn.setAttribute('aria-busy', 'true');

          try {
            const result = await createEmptyScore();

            if (result.error) {
              alert(result.error.message);
              return;
            }

            // Redirect to edit page
            window.location.href = `/score/${result.slug}/edit`;
          } catch (error) {
            alert('Failed to create score. Please try again.');
          } finally {
            createBtn.classList.remove('loading');
            createBtn.setAttribute('aria-busy', 'false');
          }
        });
      });
    </script>
  </body>
</html>
