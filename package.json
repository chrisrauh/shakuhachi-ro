{
  "name": "shakuhachi-ro",
  "version": "0.2.0",
  "description": "Shakuhachi score renderer - vanilla TypeScript implementation",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./",
    "test": "npm run type-check && npm run lint && vitest",
    "test:ui": "vitest --ui",
    "test:run": "npm run type-check && npm run lint && vitest run",
    "test:coverage": "npm run type-check && npm run lint && vitest run --coverage",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:report": "playwright show-report tests/visual/reports",
    "test:visual:debug": "playwright test --debug",
    "screenshot": "node scripts/screenshot.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@vitest/ui": "^2.1.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jsdom": "^25.0.0",
    "playwright": "^1.48.0",
    "prettier": "2.2.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^2.1.0"
  }
}
